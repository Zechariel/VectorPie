        <image name="md_marquee">
            <pos>0.850 0.112</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.243 0.120</maxSize>
        </image>

        <text name="md_description">
            <size>0.243 0.335</size>
            <pos>0.730 0.191</pos>
            <color>FFFFFF</color>
            <lineSpacing>1</lineSpacing>
