            <textColor>FFFFFF</textColor>
            <iconColor>FFFFFF</iconColor>
        </helpsystem>

        <textlist name="gamelist">
            <fontPath>./_ass/opensans_hebrew_condensed_regular.ttf</fontPath>
        </textlist>

    </view>

    <view name="detailed, video">

